.dfp {

	&.dfp-centered {
		margin-left: auto;
		margin-right: auto;
	}

	&.dfp-leaderboard {
		width: 728px;
		position:relative;
		z-index:2;
	}

	&.dfp-wire-cube-placeholder {
		width: 300px;
		height: 250px;
		display: block;
	}

	&.dfp-wire-cube {
		text-align: center;
		margin-top: 30px;

		@media #{$small-only} {
			margin-bottom: 30px;
		}

		body.single & {
			margin-top: 0px;
			margin-bottom: 20px;
		}

		/* iOS centering fix */
		@media (max-width: 399px) {
			margin-left: -.435rem;

			body.single & {
				margin-left: -2.1rem;
			}
		}
	}

	&.dfp-sbb {
		text-align:center;
		overflow:hidden;
		background-color:$light_grey;
		position:relative;
		max-width:950px;
		height:auto;
		z-index:2;
		margin-top: 15px;

		#dfp-sbb-top img {
			margin-top:15px;
		}

		#dfp-sbb-bottom {
			display:none;
		}

	}

}

@media (max-width:949px) {
	.dfp-sbb {
		display:none !important;
	}
}

.dfp-interstitial {
	position:fixed;
	z-index:99999;
	width:0%;

	iframe {
		width:0%;
	}

	#dfp-interstitial-container {
		position: absolute;
		display:none;
		width: 0%;
		height:0px;
		left: 0;
		top: 0;
		padding: 15px;
		padding-top: 0;
		z-index: 99999;
		visibility: visible;

		.dfp-interstitial-headerbar {
			color: $social_grey;
			padding: 5px 0;
			text-align: right;

			a {
				font-size: 120%;
				text-decoration: none;
			}

			a:visited {
				color: $red;
			}

		}

		#dfp-interstitial-content {
			height:100%;
		    text-align:center;
		    margin-top:10%;
		}

		.fa-times {
			font-size: 1.15rem;
			font-weight:700;
		}

		.dfp-interstitial-close {
			font-family: $open_sans;
			font-size: 1.00rem;
			font-weight:700;
		}

	}

}

@media #{$wallpaper-only} {
	.dfp-wallpaper {
		position:absolute;
		left:0;
		right:0;
		background-color: $light_grey;
		img {
			position:relative;
			width:100%;
		}
		iframe {
			width:100%;
		}
	}

	.dfp-wallpaper-fixed {
		position: fixed;
		bottom: 0;
	}
}

@media #{$wallpaper-down} {
	.dfp-wallpaper {
		position:absolute;
		left:0;
		right:0;
		background-color: $light_grey;
		img {
			display:none;
		}
		iframe {
			width:0%;
		}
	}
}